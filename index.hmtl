    <!-- JavaScript Logic -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('tax-form');
            const calculateBtn = document.getElementById('calculate-btn');
            const btnText = document.getElementById('btn-text');
            const btnLoader = document.getElementById('btn-loader');
            const resultsDiv = document.getElementById('results');
            const confirmButtons = document.querySelectorAll('.confirm-btn');
            
            // ใช้เก็บค่าลดหย่อนที่คำนวณได้จริงในแต่ละหมวด
            let calculatedDeductibles = {};
            let incomeAfterExpense = 0; // เก็บผลลัพธ์ของเงินได้หลังหักค่าใช้จ่าย

            // --- Utility Functions ---
            
            const getNum = (id) => parseFloat(document.getElementById(id).value || 0);
            const formatNum = (num) => Math.round(num).toLocaleString('en-US', { maximumFractionDigits: 0 });
            const formatNum2f = (num) => num.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            
            /**
             * ฟังก์ชันหลักในการยืนยันข้อมูลแต่ละส่วน
             */
            function confirmSection(sectionId) {
                const accordion = document.querySelector(`[data-section-id="${sectionId}"]`);
                const summarySpan = document.getElementById(`${sectionId}-summary-total`);
                const request = buildRequestJson();
                
                let result = 0;
                let summaryText = "";
                
                // คำนวณตาม Section
                if (sectionId === 'income') {
                    const incomeResult = calculateIncome(request.income);
                    incomeAfterExpense = incomeResult.totalIncomeAfterExpense;
                    result = incomeAfterExpense;
                    summaryText = `หลังหัก คชจ.: ${formatNum(result)} บ.`;
                } else if (sectionId === 'family') {
                    const deductions = calculateFamilyDeductions(request.deductions);
                    calculatedDeductibles.family = deductions.deductible;
                    result = deductions.totalFamilyDeductions;
                    summaryText = `ลดหย่อน: ${formatNum(result)} บ.`;
                } else if (sectionId === 'investment') {
                    // ต้องใช้ incomeAfterExpense (จาก Section 1) ในการคำนวณเพดานรวม (500,000)
                    const tempTotalDeduction = (calculatedDeductibles.family?.totalFamilyDeductions || 0) + (calculatedDeductibles.govtIncentive?.totalGovtIncentiveDeductions || 0);
                    const deductions = calculateInvestmentDeductions(request.deductions, request.income, tempTotalDeduction);
                    calculatedDeductibles.investment = deductions.deductible;
                    result = deductions.totalInvestmentDeductions;
                    summaryText = `ลดหย่อน: ${formatNum(result)} บ.`;
                } else if (sectionId === 'other-donation') {
                     // ต้องใช้ incomeAfterExpense และค่าลดหย่อนอื่น (จาก Section 2, 3, 5) สำหรับเพดานบริจาค (10%)
                     const tempTotalDeduction = (calculatedDeductibles.family?.totalFamilyDeductions || 0) + 
                                                (calculatedDeductibles.investment?.totalInvestmentDeductions || 0) + 
                                                (calculatedDeductibles.govtIncentive?.totalGovtIncentiveDeductions || 0);
                    const deductions = calculateOtherDonationDeductions(request.deductions, incomeAfterExpense, tempTotalDeduction);
                    calculatedDeductibles.otherDonation = deductions.deductible;
                    result = deductions.totalOtherDonationDeductions;
                    summaryText = `ลดหย่อน: ${formatNum(result)} บ.`;
                } else if (sectionId === 'govt-incentive') {
                    const deductions = calculateGovtIncentiveDeductions(request.deductions);
                    calculatedDeductibles.govtIncentive = deductions.deductible;
                    result = deductions.totalGovtIncentiveDeductions;
                    summaryText = `ลดหย่อน: ${formatNum(result)} บ.`;
                }

                // แสดงผลลัพธ์และพับ Accordion
                summarySpan.textContent = summaryText;
                summarySpan.classList.remove('hidden');
                accordion.open = false;
            }
            
            // --- Event Listeners สำหรับปุ่มยืนยันแต่ละ Section ---
            confirmButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    const sectionId = e.target.getAttribute('data-section-id');
                    confirmSection(sectionId);
                });
            });


            // --- Form Submit Logic ---
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                
                // 1. ตรวจสอบว่าได้มีการยืนยันข้อมูลทุกส่วนหรือไม่
                const sections = ['income', 'family', 'investment', 'other-donation', 'govt-incentive'];
                const allConfirmed = sections.every(s => document.getElementById(`${s}-summary-total`).classList.contains('summary-total') && !document.getElementById(`${s}-summary-total`).classList.contains('hidden'));

                if (!allConfirmed) {
                    alert('กรุณายืนยันข้อมูลในทุกหัวข้อหลัก (1-5) ก่อนการคำนวณรวม');
                    return;
                }
                
                // 2. เริ่ม Loading State
                btnText.classList.add('hidden');
                btnLoader.classList.remove('hidden');
                calculateBtn.disabled = true;
                resultsDiv.classList.add('hidden');
                
                setTimeout(() => {
                    // 3. คำนวณภาษีรวม
                    const requestJson = buildRequestJson();
                    const responseJson = calculateTax(requestJson);
                    
                    // 4. แสดงผลลัพธ์
                    displayResults(responseJson);

                    // 5. สิ้นสุด Loading State
                    btnText.classList.remove('hidden');
                    btnLoader.classList.add('hidden');
                    calculateBtn.disabled = false;
                    resultsDiv.classList.remove('hidden');
                    resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'start' });

                }, 800); 
            });
            
            /**
             * 1. รวบรวมข้อมูลจากฟอร์มเป็น JSON (Request Object)
             */
            function buildRequestJson() {
                const income4Taxed = document.getElementById('income4_taxed').checked;
                
                return {
                    income: {
                        i1: getNum('income1'), i2: getNum('income2'), i3: getNum('income3'), 
                        i4: income4Taxed ? 0 : getNum('income4'), // ถูกหัก ณ ที่จ่าย และไม่นำมารวม ให้เป็น 0
                        i5: getNum('income5'), i6: getNum('income6'), i7: getNum('income7'), i8: getNum('income8'),
                    },
                    deductions: {
                        spouse_status: document.getElementById('spouse_status').value,
                        children_pre_2561: getNum('children_pre_2561'), children_post_2561: getNum('children_post_2561'),
                        parents: getNum('parents'), parents_spouse: getNum('parents_spouse'),
                        disabled_support: getNum('disabled_support'),
                        social_security: getNum('social_security'),
                        life_insurance: getNum('life_insurance'), health_insurance: getNum('health_insurance'),
                        annuity_insurance: getNum('annuity_insurance'), parent_health_insurance: getNum('parent_health_insurance'),
                        life_insurance_spouse: getNum('life_insurance_spouse'), social_enterprise: getNum('social_enterprise'),
                        rmf: getNum('rmf'), ssf: getNum('ssf'), tesg: getNum('tesg'), nsf: getNum('nsf'),
                        provident_fund: getNum('provident_fund'),
                        housing_interest: getNum('housing_interest'), political_donation: getNum('political_donation'),
                        donation_general: getNum('donation_general'), donation_education: getNum('donation_education'),
                        e_receipt: getNum('e_receipt'), otop: getNum('otop'), travel: getNum('travel'), new_home_interest: getNum('new_home_interest'),
                    }
                };
            }
            
            /**
             * 2. คำนวณภาษี (Calculation Engine)
             */
            function calculateTax(request) {
                // --- Step 2.1: คำนวณเงินได้และหักค่าใช้จ่าย ---
                const incomeResult = calculateIncome(request.income);
                incomeAfterExpense = incomeResult.totalIncomeAfterExpense; // อัพเดทตัวแปร global
                const totalIncome = incomeResult.totalIncome;

                // --- Step 2.2: คำนวณค่าลดหย่อนแต่ละกลุ่ม
                const familyResult = calculateFamilyDeductions(request.deductions);
                const govtIncentiveResult = calculateGovtIncentiveDeductions(request.deductions); // ต้องคำนวณก่อน Donation
                
                // สำหรับกลุ่มลงทุน/ประกัน ต้องใช้ incomeAfterExpense
                const invDeductionUsed = familyResult.totalFamilyDeductions + govtIncentiveResult.totalGovtIncentiveDeductions;
                const investmentResult = calculateInvestmentDeductions(request.deductions, request.income, invDeductionUsed);
                
                // สำหรับกลุ่มบริจาค ต้องใช้ Net Income ก่อนบริจาค
                const deductionBeforeDonation = familyResult.totalFamilyDeductions + 
                                                govtIncentiveResult.totalGovtIncentiveDeductions + 
                                                investmentResult.totalInvestmentDeductions;
                
                const otherDonationResult = calculateOtherDonationDeductions(request.deductions, incomeAfterExpense, deductionBeforeDonation);

                // --- Step 2.3: รวมค่าลดหย่อนทั้งหมด ---
                const totalDeductions = deductionBeforeDonation + otherDonationResult.totalOtherDonationDeductions;
                
                // --- Step 2.4: คำนวณเงินได้สุทธิ ---
                let netTaxableIncome = incomeAfterExpense - totalDeductions;
                netTaxableIncome = Math.max(0, netTaxableIncome); 
                
                // --- Step 2.5: คำนวณภาษี ---
                const totalTax = calculateProgressiveTax(netTaxableIncome);
                
                // --- Step 2.6: คำนวณฐานภาษี ---
                const marginalRate = getMarginalRate(netTaxableIncome);
                
                // --- Step 2.7: คำนวณโอกาสประหยัดภาษี ---
                const opportunities = calculateOpportunities(investmentResult.deductible, marginalRate, netTaxableIncome);

                // --- สร้าง Response JSON ---
                return {
                    summary: {
                        totalIncome: totalIncome,
                        totalIncomeAfterExpense: incomeAfterExpense,
                        totalDeductions: totalDeductions,
                        netTaxableIncome: netTaxableIncome,
                        totalTax: totalTax,
                        marginalRate: marginalRate
                    },
                    opportunities: opportunities,
                };
            }
            
            /**
             * S1. คำนวณเงินได้ (Sub-function)
             */
            function calculateIncome(income) {
                let totalIncome = 0;
                let totalExpense = 0;
                
                // 40(1), 40(2)
                const inc1_2 = income.i1 + income.i2;
                totalIncome += inc1_2;
                totalExpense += Math.min(inc1_2 * 0.5, 100000); 
                
                // 40(3)
                totalIncome += income.i3;
                totalExpense += Math.min(income.i3 * 0.5, 100000);
                
                // 40(4)
                totalIncome += income.i4; 
                
                // 40(5)
                totalIncome += income.i5;
                totalExpense += Math.min(income.i5 * 0.3, income.i5); 
                
                // 40(6)
                totalIncome += income.i6;
                totalExpense += Math.min(income.i6 * 0.3, income.i6); 
                
                // 40(7)
                totalIncome += income.i7;
                totalExpense += Math.min(income.i7 * 0.6, income.i7); 
                
                // 40(8)
                totalIncome += income.i8;
                totalExpense += Math.min(income.i8 * 0.4, income.i8); 
                
                return {
                    totalIncome: totalIncome,
                    totalIncomeAfterExpense: totalIncome - totalExpense
                };
            }

            /**
             * S2. ค่าลดหย่อนส่วนตัวและครอบครัว (Family Deductions)
             */
            function calculateFamilyDeductions(d) {
                let totalDeductions = 0;
                let deductible = {};

                deductible.personal = 60000;
                totalDeductions += deductible.personal;

                deductible.spouse = (d.spouse_status === 'no_income') ? 60000 : 0;
                totalDeductions += deductible.spouse;

                deductible.children = (d.children_pre_2561 * 30000) + (d.children_post_2561 * 60000);
                totalDeductions += deductible.children;
                
                deductible.parents = Math.min(d.parents, 2) * 30000;
                deductible.parents_spouse = (d.spouse_status === 'no_income' && deductible.spouse > 0) ? Math.min(d.parents_spouse, 2) * 30000 : 0;
                totalDeductions += deductible.parents + deductible.parents_spouse;

                deductible.disabled_support = d.disabled_support * 60000;
                totalDeductions += deductible.disabled_support;
                
                deductible.parent_health_insurance = Math.min(d.parent_health_insurance, 15000);
                totalDeductions += deductible.parent_health_insurance;
                
                deductible.social_security = Math.min(d.social_security, 9000);
                totalDeductions += deductible.social_security;

                return {
                    totalFamilyDeductions: totalDeductions,
                    deductible: deductible
                };
            }

            /**
             * S3. ค่าลดหย่อนประกันและการลงทุน (Investment Deductions)
             */
            function calculateInvestmentDeductions(d, income, deductionUsedBefore) {
                let totalDeductions = 0;
                let deductible = {};
                
                // ประกันชีวิตคู่สมรส (มีผลเมื่อคู่สมรสไม่มีเงินได้)
                deductible.life_insurance_spouse = (d.spouse_status === 'no_income') ? Math.min(d.life_insurance_spouse, 10000) : 0;
                totalDeductions += deductible.life_insurance_spouse;
                
                // เงินลงทุนธุรกิจ Social Enterprise
                deductible.social_enterprise = Math.min(d.social_enterprise, 100000);
                totalDeductions += deductible.social_enterprise;

                // *** กลุ่มประกันชีวิต + สุขภาพ (รวมกันไม่เกิน 100k) ***
                deductible.health_insurance = Math.min(d.health_insurance, 25000); // สุขภาพสูงสุด 25k
                deductible.life_insurance = d.life_insurance;
                deductible.life_health_combined = Math.min(deductible.life_insurance + deductible.health_insurance, 100000);
                totalDeductions += deductible.life_health_combined;
                
                // *** กลุ่มเกษียณ (รวมกันไม่เกิน 500k) ***
                const retirementCap = 500000;
                let retirementUsed = 0;
                
                // 1. กองทุนสำรองเลี้ยงชีพ / กบข.
                deductible.provident_fund = Math.min(d.provident_fund, retirementCap);
                retirementUsed += deductible.provident_fund;
                
                // 2. กอช. (สูงสุด 30k)
                deductible.nsf = Math.min(d.nsf, 30000, retirementCap - retirementUsed);
                retirementUsed += deductible.nsf;
                
                // 3. RMF (ไม่เกิน 30% ของ inc, รวมแล้วไม่เกิน 500k)
                const income30 = (income.i1 + income.i2 + income.i3 + income.i4 + income.i5 + income.i6 + income.i7 + income.i8) * 0.3;
                deductible.rmf = Math.min(d.rmf, income30, retirementCap - retirementUsed);
                retirementUsed += deductible.rmf;
                
                // 4. SSF (ไม่เกิน 30% ของ inc, ไม่เกิน 200k, รวมแล้วไม่เกิน 500k)
                deductible.ssf = Math.min(d.ssf, income30, 200000, retirementCap - retirementUsed);
                retirementUsed += deductible.ssf;
                
                // 5. ประกันบำนาญ (ไม่เกิน 15% ของ inc, ไม่เกิน 200k, รวมแล้วไม่เกิน 500k)
                const income15 = (income.i1 + income.i2 + income.i3 + income.i4 + income.i5 + income.i6 + income.i7 + income.i8) * 0.15;
                deductible.annuity_insurance = Math.min(d.annuity_insurance, income15, 200000, retirementCap - retirementUsed);
                retirementUsed += deductible.annuity_insurance;
                
                totalDeductions += (deductible.provident_fund + deductible.nsf + deductible.rmf + deductible.ssf + deductible.annuity_insurance);
                
                // TESG (กลุ่มแยก)
                deductible.tesg = Math.min(d.tesg, 100000);
                totalDeductions += deductible.tesg;


                return {
                    totalInvestmentDeductions: totalDeductions,
                    deductible: deductible 
                };
            }

            /**
             * S4. ค่าลดหย่อนอื่นๆ และบริจาค (Other & Donation Deductions)
             */
            function calculateOtherDonationDeductions(d, incomeAfterExpense, deductionBeforeDonation) {
                let totalDeductions = 0;
                let deductible = {};

                // ดอกเบี้ยบ้าน
                deductible.housing_interest = Math.min(d.housing_interest, 100000);
                totalDeductions += deductible.housing_interest;

                // บริจาคพรรคการเมือง
                deductible.political_donation = Math.min(d.political_donation, 10000);
                totalDeductions += deductible.political_donation;

                // *** กลุ่มบริจาค (คิดทีหลังสุด) ***
                let netIncomeBeforeDonation = incomeAfterExpense - (deductionBeforeDonation + totalDeductions);
                netIncomeBeforeDonation = Math.max(0, netIncomeBeforeDonation);
                let donationCap = netIncomeBeforeDonation * 0.1; // 10% ของเงินได้หลังหักลดหย่อนอื่นๆ
                
                // บริจาคทั่วไป (1x) + บริจาคการศึกษา/กีฬา/โรงพยาบาล (2x)
                let totalDonationValue = (d.donation_education * 2) + d.donation_general;
                let actualDonationCap = donationCap + d.donation_education; // เพดานรวม: 10% ของเงินได้ (1x) + จำนวนบริจาคการศึกษา (1x)
                
                deductible.donations = Math.min(totalDonationValue, actualDonationCap);
                
                totalDeductions += deductible.donations;

                return {
                    totalOtherDonationDeductions: totalDeductions,
                    deductible: deductible
                };
            }
            
            /**
             * S5. กลุ่มมาตรการส่งเสริมเศรษฐกิจ (Govt Incentive Deductions)
             */
             function calculateGovtIncentiveDeductions(d) {
                let totalDeductions = 0;
                let deductible = {};

                deductible.e_receipt = Math.min(d.e_receipt, 50000);
                totalDeductions += deductible.e_receipt;
                
                deductible.otop = Math.min(d.otop, 20000);
                totalDeductions += deductible.otop;
                
                deductible.travel = Math.min(d.travel, 30000);
                totalDeductions += deductible.travel;
                
                deductible.new_home_interest = Math.min(d.new_home_interest, 10000);
                totalDeductions += deductible.new_home_interest;

                return {
                    totalGovtIncentiveDeductions: totalDeductions,
                    deductible: deductible
                };
            }

            /**
             * 2.5. คำนวณภาษีแบบขั้นบันได (Sub-function)
             */
            function calculateProgressiveTax(income) {
                if (income <= 150000) return 0;
                
                let tax = 0;
                let remaining = income;
                
                const bands = [
                    { limit: 5000000, rate: 0.35 },
                    { limit: 2000000, rate: 0.30 },
                    { limit: 1000000, rate: 0.25 },
                    { limit: 750000, rate: 0.20 },
                    { limit: 500000, rate: 0.15 },
                    { limit: 300000, rate: 0.10 },
                    { limit: 150000, rate: 0.05 },
                    { limit: 0, rate: 0 } // Base
                ];
                
                for (let i = 0; i < bands.length - 1; i++) {
                    const currentBand = bands[i];
                    const nextBandLimit = bands[i+1].limit;
                    
                    if (remaining > currentBand.limit) {
                        tax += (remaining - currentBand.limit) * currentBand.rate;
                        remaining = currentBand.limit;
                    }
                }
                
                // ส่วนสุดท้าย (150,001 - 300,000)
                if (remaining > 150000) {
                    tax += (remaining - 150000) * 0.05;
                }
                
                return Math.max(0, tax);
            }
            
            /**
             * 2.6. หาฐานภาษีสูงสุด (Sub-function)
             */
            function getMarginalRate(income) {
                if (income <= 150000) return 0;
                if (income <= 300000) return 0.05;
                if (income <= 500000) return 0.10;
                if (income <= 750000) return 0.15;
                if (income <= 1000000) return 0.20;
                if (income <= 2000000) return 0.25;
                if (income <= 5000000) return 0.30;
                return 0.35;
            }

            /**
             * 2.7. คำนวณโอกาสประหยัดภาษี (Sub-function)
             */
            function calculateOpportunities(deductible, marginalRate, netTaxableIncome) {
                if (netTaxableIncome <= 150000 || marginalRate === 0) {
                    return {
                        life: { current: 0, remaining: 0, saving: 0 },
                        annuity: { current: 0, remaining: 0, saving: 0 },
                        tesg: { current: 0, remaining: 0, saving: 0 },
                        totalSaving: 0
                    };
                }
                
                let remainingTaxableIncome = netTaxableIncome - 150000;
                let totalSaving = 0;
                
                // --- 1. กลุ่มประกันชีวิต + สุขภาพ (100k) ---
                const lifeHealthMax = 100000;
                const lifeHealthCurrent = deductible.life_health_combined;
                const lifeHealthRemaining = Math.max(0, lifeHealthMax - lifeHealthCurrent);
                
                const lifeHealthReducible = Math.min(lifeHealthRemaining, remainingTaxableIncome);
                const lifeHealthSaving = lifeHealthReducible * marginalRate;
                totalSaving += lifeHealthSaving;
                remainingTaxableIncome -= lifeHealthReducible;

                // --- 2. กลุ่มเกษียณ (500k) ---
                const retirementCap = 500000;
                const retirementUsed = (deductible.provident_fund || 0) + (deductible.nsf || 0) + (deductible.rmf || 0) + (deductible.ssf || 0) + (deductible.annuity_insurance || 0);
                const retirementRemaining = Math.max(0, retirementCap - retirementUsed);
                
                const retirementReducible = Math.min(retirementRemaining, remainingTaxableIncome);
                const retirementSaving = retirementReducible * marginalRate;
                totalSaving += retirementSaving;
                remainingTaxableIncome -= retirementReducible;
                
                // --- 3. TESG (100k) ---
                const tesgMax = 100000;
                const tesgCurrent = deductible.tesg;
                const tesgRemaining = Math.max(0, tesgMax - tesgCurrent);
                
                const tesgReducible = Math.min(tesgRemaining, remainingTaxableIncome);
                const tesgSaving = tesgReducible * marginalRate;
                totalSaving += tesgSaving;

                return {
                    life: {
                        current: lifeHealthCurrent,
                        remaining: lifeHealthRemaining,
                        saving: lifeHealthSaving
                    },
                    annuity: {
                        current: retirementUsed,
                        remaining: retirementRemaining,
                        saving: retirementSaving
                    },
                    tesg: {
                        current: tesgCurrent,
                        remaining: tesgRemaining,
                        saving: tesgSaving
                    },
                    totalSaving: totalSaving
                };
            }

            /**
             * 3. แสดงผลลัพธ์ (Render Function)
             */
            function displayResults(response) {
                const s = response.summary;
                const o = response.opportunities;
                
                // สรุปผลหลัก
                document.getElementById('res-total-income-after-expense').textContent = formatNum(s.totalIncomeAfterExpense) + ' บ.';
                document.getElementById('res-total-deduction').textContent = formatNum(s.totalDeductions) + ' บ.';
                document.getElementById('res-net-taxable-income').textContent = formatNum(s.netTaxableIncome) + ' บ.';
                document.getElementById('res-marginal-rate').textContent = (s.marginalRate * 100).toFixed(0) + '%';
                
                // ภาษีสุดท้าย
                document.getElementById('res-total-tax').textContent = formatNum2f(s.totalTax) + ' บ.';
                
                // ซ่อน/แสดงคำเตือน 150k
                const warning150k = document.getElementById('res-net-income-warning');
                if (s.netTaxableIncome <= 150000 && s.totalIncome > 0) {
                    warning150k.classList.remove('hidden');
                } else {
                    warning150k.classList.add('hidden');
                }
                
                // โอกาส
                document.getElementById('opp-life-current').textContent = formatNum(o.life.current) + ' บ.';
                document.getElementById('opp-life-remaining').textContent = formatNum(o.life.remaining) + ' บ.';
                document.getElementById('opp-life-saving').textContent = formatNum2f(o.life.saving) + ' บ.';
                
                document.getElementById('opp-annuity-current').textContent = formatNum(o.annuity.current) + ' บ.';
                document.getElementById('opp-annuity-remaining').textContent = formatNum(o.annuity.remaining) + ' บ.';
                document.getElementById('opp-annuity-saving').textContent = formatNum2f(o.annuity.saving) + ' บ.';
                
                document.getElementById('opp-tesg-current').textContent = formatNum(o.tesg.current) + ' บ.';
                document.getElementById('opp-tesg-remaining').textContent = formatNum(o.tesg.remaining) + ' บ.';
                document.getElementById('opp-tesg-saving').textContent = formatNum2f(o.tesg.saving) + ' บ.';
                
                // รวม
                document.getElementById('opp-total-saving').textContent = formatNum2f(o.totalSaving) + ' บ.';
            }

        });
